swiper{
  width: 100%;
  height: 350rpx;
  margin-top: 2rpx;
}
swiper image{
  width:100%;
  height:350rpx;
}

.grids{
  display: flex;
  flex-wrap: wrap;
  margin-top: 25rpx;
  border-bottom: 1rpx solid #ccc;
}
.grid_item{
  display: flex;
  flex-direction: column;
  width:250rpx;
  height: 250rpx;
  border-top: 1rpx solid #ccc;
  border-left: 1rpx solid #ccc;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}
.grid_item:nth-child(3n){
  border-right: 1rpx solid #ccc;
}
.grid_item>image{
  width: 70rpx;
  height:70rpx;
}
.grid_item>text{
  display: block;
  margin-top: 5rpx;
}
/* link */
.link{
  display: flex;
  margin: 10rpx 0;
}
.link image{
  width: 370rpx;
  height: 180rpx;
  padding: 30rpx;
}